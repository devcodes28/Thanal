<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="dashboard-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.SupporterDashboardController">
    <children>
        <Label layoutX="28.0" layoutY="24.0" text="Community Supporter Dashboard" styleClass="header-label" />
        <TabPane layoutX="28.0" layoutY="70.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="28.0" AnchorPane.rightAnchor="28.0" AnchorPane.topAnchor="70.0">
            <tabs>
                <Tab text="Read Blogs">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Community Blogs" styleClass="sub-header" />
                                        <ListView fx:id="blogListView" prefHeight="150.0" />
                                        <TextArea fx:id="blogContentView" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                                        <TextField fx:id="blogRatingField" promptText="Rate Blog (1-5)" />
                                        <Button onAction="#submitRating" text="Submit Rating" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Provide Recommendations">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Suggest an Improvement" styleClass="sub-header" />
                                        <TextArea fx:id="recommendationArea" promptText="Suggest a new feature or improvement..." VBox.vgrow="ALWAYS" />
                                        <Button onAction="#submitRecommendation" text="Submit Recommendation" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>