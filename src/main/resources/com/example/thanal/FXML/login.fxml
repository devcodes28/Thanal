<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="800.0" prefWidth="1280.0" styleClass="login-page-root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.LoginController">
    <VBox alignment="CENTER" prefWidth="500.0" spacing="20.0" styleClass="content-overlay login-panel">
        <children>
            <Label text="Member Login" styleClass="login-title" />

            <ComboBox fx:id="userRoleComboBox" maxWidth="350.0" promptText="Select Role" />

            <TextField fx:id="emailField" maxWidth="350.0" promptText="Email" />
            <PasswordField fx:id="passwordField" maxWidth="350.0" promptText="Password" />
            <HBox alignment="CENTER_RIGHT" maxWidth="350.0">
                <children>
                    <Hyperlink onAction="#handleForgotPassword" styleClass="link-style" text="Forgot Password?" />
                </children>
            </HBox>
            <Button onAction="#handleLoginButtonAction" defaultButton="true" maxWidth="350.0" text="Login Now" />
            <Label fx:id="statusLabel" alignment="CENTER" maxWidth="Infinity" styleClass="status-label" />

            <VBox alignment="CENTER" spacing="10.0">
                <children>
                    <Label styleClass="signup-text" text="Don't have an account? Register as a:" />
                    <HBox alignment="CENTER" spacing="15.0">
                        <children>
                            <Hyperlink onAction="#handleRegisterParent" styleClass="link-style" text="Parent" />
                            <Hyperlink onAction="#handleRegisterDoctor" styleClass="link-style" text="Doctor" />
                            <Hyperlink onAction="#handleRegisterSupporter" styleClass="link-style" text="Supporter" />
                        </children>
                    </HBox>
                </children>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </VBox>
            <Button onAction="#handleBackButtonAction" maxWidth="350.0" styleClass="nav-button" text="← Back to Home" />
        </children>
    </VBox>
</StackPane>