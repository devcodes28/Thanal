<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="dashboard-root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.ParentDashboardController">
    <top>
        <HBox styleClass="dashboard-header">
            <children>
                <Label fx:id="welcomeLabel" text="Parent Dashboard" styleClass="dashboard-title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#handleLogout" text="Logout" styleClass="logout-button" />
            </children>
        </HBox>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="15.0" />
            </padding>
            <tabs>
                <Tab text="Behavior Tracking">
                    <content>
                        <VBox spacing="10" styleClass="card">
                            <children>
                                <Label styleClass="card-title" text="Log Your Child's Behavior" />
                                <TextField fx:id="behaviourField" promptText="Enter observed behavior(s)..." />
                                <TextField fx:id="triggersField" promptText="Enter suspected trigger(s)..." />
                                <Button onAction="#submitBehaviorLog" text="Save Log Entry" />
                                <Separator prefHeight="20.0" />
                                <Label styleClass="sub-header" text="Past Behavior Logs" />
                                <ListView fx:id="behaviorLogListView" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Financial Aid">
                    <content>
                        <VBox spacing="10" styleClass="card">
                            <children>
                                <Label styleClass="card-title" text="Apply for Financial Assistance" />
                                <Label text="Select the government department or scheme you are applying for." wrapText="true" />
                                <ComboBox fx:id="govtDeptComboBox" promptText="Select Department/Scheme" maxWidth="Infinity" />
                                <Button onAction="#submitFinancialAid" text="Submit Application" />
                                <Separator prefHeight="20.0" />
                                <Label styleClass="sub-header" text="Application Status" />
                                <ListView fx:id="financialAidListView" prefHeight="150.0" />
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Educational Games">
                    <content>
                        <VBox spacing="20" styleClass="card" alignment="CENTER">
                            <children>
                                <Label styleClass="card-title" text="Fun &amp; Learning" />
                                <HBox spacing="15" alignment="CENTER">
                                    <children>
                                        <Button text="Emotion Match Game" onAction="#playEmotionGame" />
                                        <Button text="Story Builder Game" onAction="#playStoryGame" />
                                        <Button text="Pattern Recognition" onAction="#playPatternGame" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Community Blogs">
                    <content>
                        <VBox spacing="10" styleClass="card">
                            <children>
                                <Label styleClass="card-title" text="Read &amp; Write Blogs" />
                                <ListView fx:id="blogListView" prefHeight="150.0" />
                                <TextArea fx:id="blogContentView" editable="false" prefHeight="100.0" wrapText="true" />
                                <TextField fx:id="commentField" promptText="Write a comment..." />
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Q&amp;A Forum">
                    <content>
                        <VBox spacing="10" styleClass="card">
                            <children>
                                <Label styleClass="card-title" text="Ask the Community" />
                                <ListView fx:id="qnaListView" prefHeight="200.0" />
                                <TextArea fx:id="questionArea" promptText="Ask a question..." VBox.vgrow="ALWAYS" />
                                <Button onAction="#submitQuestion" text="Submit Question" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Consult a Doctor">
                    <content>
                        <VBox spacing="10" styleClass="card">
                            <children>
                                <Label styleClass="card-title" text="Request a Consultation" />
                                <ListView fx:id="doctorListView" VBox.vgrow="ALWAYS" />
                                <Button onAction="#requestConsultation" text="Request Consultation" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>