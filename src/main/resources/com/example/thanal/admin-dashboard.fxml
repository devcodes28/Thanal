<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="dashboard-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.AdminDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="dashboard-header">
            <children>
                <Label text="Admin Dashboard" styleClass="dashboard-title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#handleLogout" text="Logout" styleClass="logout-button" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <VBox styleClass="card" spacing="10.0">
                    <children>
                        <Label text="User Login Requests" styleClass="sub-header" />
                        <ListView fx:id="userRequestsListView" prefHeight="180.0" />
                        <Button onAction="#approveUser" text="Approve Selected User" />
                    </children>
                </VBox>
                <VBox styleClass="card" spacing="10.0">
                    <children>
                        <Label text="Manage All Users" styleClass="sub-header" />
                        <ListView fx:id="allUsersListView" prefHeight="180.0" />
                        <Button onAction="#deleteUser" text="Delete Selected User" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>