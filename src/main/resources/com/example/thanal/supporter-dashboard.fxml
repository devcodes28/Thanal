<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thanal.controller.SupporterDashboardController">
    <children>
        <Label layoutX="28.0" layoutY="24.0" text="Community Supporter Dashboard">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TabPane layoutX="28.0" layoutY="70.0" prefHeight="400.0" prefWidth="645.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Read Blogs">
                    <content>
                        <VBox spacing="10">
                            <ListView fx:id="blogListView" prefHeight="200.0"/>
                            <TextArea fx:id="blogContentView" editable="false" wrapText="true" />
                            <TextField fx:id="blogRatingField" promptText="Rate Blog (1-5)"/>
                            <Button onAction="#submitRating" text="Submit Rating"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Provide Recommendations">
                    <content>
                        <VBox spacing="10">
                            <TextArea fx:id="recommendationArea" promptText="Suggest a new feature or improvement..." />
                            <Button onAction="#submitRecommendation" text="Submit Recommendation" />
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
