<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="dashboard-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.DoctorDashboardController">
    <children>
        <Label layoutX="28.0" layoutY="24.0" text="Doctor Dashboard" styleClass="header-label" />
        <TabPane layoutX="28.0" layoutY="70.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="28.0" AnchorPane.rightAnchor="28.0" AnchorPane.topAnchor="70.0">
            <tabs>
                <Tab text="Community Blogs">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Manage Your Blogs" styleClass="sub-header" />
                                        <ListView fx:id="myBlogsListView" VBox.vgrow="ALWAYS" />
                                        <Button onAction="#writeNewBlog" text="Write New Blog" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Manage Consultations">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Consultation Requests" styleClass="sub-header" />
                                        <ListView fx:id="consultationRequestsListView" VBox.vgrow="ALWAYS" />
                                        <HBox alignment="CENTER" spacing="10.0">
                                            <children>
                                                <Button onAction="#acceptConsultation" text="Accept" />
                                                <Button onAction="#declineConsultation" text="Decline" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="QNA Forum">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Answer Community Questions" styleClass="sub-header" />
                                        <ListView fx:id="unansweredQuestionsListView" prefHeight="150.0" />
                                        <TextArea fx:id="answerArea" promptText="Your answer..." VBox.vgrow="ALWAYS" />
                                        <Button onAction="#submitAnswer" text="Submit Answer" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="View Medical Reports">
                    <content>
                        <AnchorPane styleClass="dashboard-pane">
                            <children>
                                <VBox styleClass="card" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                    <children>
                                        <Label text="Approved Patient Reports" styleClass="sub-header" />
                                        <ListView fx:id="approvedPatientsListView" VBox.vgrow="ALWAYS" />
                                        <Button onAction="#viewPatientReport" text="View Report" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>