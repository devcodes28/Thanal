<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="homePageRoot" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane>
        <top>
            <fx:include source="navigation-bar.fxml" />
        </top>
        <center>
            <VBox alignment="CENTER" spacing="20.0" styleClass="home-content-overlay" BorderPane.alignment="CENTER">
                <children>
                    <Label text="Thanal" styleClass="home-title" />
                    <Label text="Connect. Support. Grow." styleClass="home-tagline" />
                    <Label styleClass="home-tagline" text="A community dedicated to connecting, supporting, and fostering growth for children with autism and their families." textAlignment="CENTER" wrapText="true" />
                </children>
                <BorderPane.margin>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                </BorderPane.margin>
            </VBox>
        </center>
    </BorderPane>
</StackPane>