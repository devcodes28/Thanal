<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="info-page-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thanal.controller.ContactUsController">
    <top>
        <fx:include source="navigation-bar.fxml" />
    </top>
    <center>
        <HBox alignment="CENTER" spacing="50.0" styleClass="info-content-card">
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </BorderPane.margin>
            <children>
                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Contact Us" styleClass="section-title" />
                        <Text styleClass="info-text" text="We'd love to hear from you! Whether you have a question, feedback, or need support, please don't hesitate to reach out." />
                        <Label text="Get in Touch" styleClass="section-subtitle" />
                        <Text styleClass="info-text" text="Email: support@thanal.com" />
                        <Text styleClass="info-text" text="Phone: +91 123 456 7890" />
                        <Label text="Our Promise" styleClass="section-subtitle" />
                        <Text styleClass="info-text" text="We are committed to responding to all inquiries within 48 business hours. Your feedback is valuable to us as we strive to improve our platform and services." />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="info-image-container">
                    <children>
                        <ImageView fitHeight="400.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@contact_us_image.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>